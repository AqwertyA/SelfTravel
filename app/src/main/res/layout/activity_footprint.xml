<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <org.selftravel.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/btn_records"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/green_login"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/shape_circle">

            <TextView
                android:id="@+id/tv_province_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="0"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_province_num"
                android:layout_centerHorizontal="true"
                android:text="个省"
                android:textColor="@color/white" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/shape_circle">

            <TextView
                android:id="@+id/tv_scenic_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="0"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_scenic_num"
                android:layout_centerHorizontal="true"
                android:text="个景区"
                android:textColor="@color/white" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/shape_circle">

            <TextView
                android:id="@+id/tv_scenic_spot_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="0"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_scenic_spot_num"
                android:layout_centerHorizontal="true"
                android:text="个景点"
                android:textColor="@color/white" />

        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_surpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_login"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/surpass"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/list_view_foot_print"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>