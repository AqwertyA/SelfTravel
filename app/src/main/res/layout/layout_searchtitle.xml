<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/all_bg"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/green_login"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <EditText
            android:id="@+id/search"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_searchtitle"
            android:drawableRight="@drawable/top_search_btn_for_search"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:hint="输入你想去的城市或景区" />


        <ImageView
            android:id="@+id/location_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:src="@drawable/city_scenicspot_realnavigation" />
    </RelativeLayout>

</LinearLayout>